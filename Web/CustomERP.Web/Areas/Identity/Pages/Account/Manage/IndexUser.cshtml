@page
@model IndexUserModel
@{
    ViewData["Title"] = "Edit User";
    ViewData["ActivePage"] = ManageNavPages.IndexUser;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-user-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UsernameTest"></label>
                <input asp-for="Input.UsernameTest" class="form-control" />@*disabled*@
                <span asp-validation-for="Input.UsernameTest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profileUser-button" type="submit" asp-page-handler="Edit User" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}