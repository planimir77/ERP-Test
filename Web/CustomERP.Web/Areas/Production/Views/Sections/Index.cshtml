@using Microsoft.AspNetCore.Razor.TagHelpers
@model IEnumerable<CustomERP.Web.ViewModels.Production.Sections.SectionIndexViewModel>
@{
    ViewData["Title"] = "Index";
}

    <h1 class="card-header-tabs">Production</h1>
<p></p>
<form>
    <button asp-controller="Sections" asp-action="Create" class="btn-primary rounded border" role="button" style="color: chartreuse">Create New</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectionParent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedFrom)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Order.Recipe)
            </td>
            <td>
                @Html.DisplayFor(model => item.SectionParent.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(model => item.DeletedOn)
            </td>
            <td>
                @Html.DisplayFor(model => item.DeletedFrom)
            </td>
            <td>
                @Html.DisplayFor(model => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(model => item.CreatedFrom)
            </td>
            <td>
                @Html.DisplayFor(model => item.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(model => item.ModifiedFrom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-primary">Edit</a>|
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn-block">Details</a>
            </td>
            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger">Delete</a></td>
        </tr>
}
    </tbody>
</table>
